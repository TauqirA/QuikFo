{
  "manifest_version": 2,

  "name": "My Reading Helper",
  "description": "This extension Will help with reading articles",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
	"tabs",
   "<all_urls>",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["popup.js"],
     "run_at": "document_start",
     "all_frames": true
   }
 ]
}
